# Application Type
APP_TYPE=VERIFIER_NODE

# Server Port
OID4VP_PORT=3002

# Database
OID4VP_DATABASE_FILEPATH=./oid4vp.sqlite

# Client ID Scheme (OID4VP 1.0 uses prefix in client_id)
OID4VP_CLIENT_ID_SCHEME=x509_hash

# Verifier JWK (ES256 private key)
OID4VP_VERIFIER_JWK=

# X.509 Certificate Chain (Base64-encoded DER)
OID4VP_VERIFIER_X5C=

# OID4VP Request Settings
OID4VP_REQUEST_HOST=haip-vp://authorize
OID4VP_REQUEST_URI=http://localhost:3002/oid4vp/request
OID4VP_RESPONSE_URI=http://localhost:3002/oid4vp/responses
OID4VP_REDIRECT_URI_RETURNED_BY_RESPONSE_URI=http://localhost:3002/result

# Request Expiration Times (seconds)
OID4VP_REQUEST_EXPIRED_IN_AT_RESPONSE_ENDPOINT=600
OID4VP_REQUEST_EXPIRED_IN_AT_VERIFIER=600
OID4VP_RESPONSE_EXPIRED_IN=600
POST_SESSION_EXPIRED_IN=600
POST_STATE_EXPIRED_IN=600

# Client Metadata
OID4VP_CLIENT_ID=x509_hash:YOUR_CLIENT_ID_HERE
OID4VP_CLIENT_METADATA_NAME=Learning Credential Verifier
OID4VP_CLIENT_METADATA_LOGO_URI=http://localhost:3002/logo.png
OID4VP_CLIENT_METADATA_POLICY_URI=http://localhost:3002/policy.html
OID4VP_CLIENT_METADATA_TOS_URI=http://localhost:3002/tos.html

# Presentation Definition (deprecated in OID4VP 1.0, kept for backward compatibility)
OID4VP_PRESENTATION_DEFINITION_URI=http://localhost:3002/oid4vp/presentation-definitions

# VP Token Encryption
# VP Tokenの暗号化を有効化（JWE形式、direct_post.jwtモード）
# 有効化すると、Verifier側でエフェメラル鍵ペアを生成し、
# Authorization Requestのclient_metadata.jwksに公開鍵を含めます。
# Walletはその公開鍵を使ってVP Tokenを暗号化して送信します。
OID4VP_VP_TOKEN_ENCRYPTION_ENABLED=false

# Session Management
OID4VP_COOKIE_SECRET=change-this-secret-in-production

# CORS
APP_HOST=http://localhost:3001

# Admin Debug Interface
ADMIN_DEBUG_ENABLED=true
ADMIN_DEBUG_USERNAME=
ADMIN_DEBUG_PASSWORD=

# Logging
NODE_ENV=local

