<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verification Result</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">Verification Result</h3>
                    </div>
                    <div class="card-body">
                        <!-- Loading State -->
                        <div id="loading-state" class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-3">Processing response_code...</p>
                        </div>

                        <!-- Error State -->
                        <div id="error-state" class="d-none">
                            <div class="alert alert-danger" role="alert">
                                <h4 class="alert-heading">Error</h4>
                                <p id="error-message"></p>
                            </div>
                            <div class="d-grid">
                                <a href="/" class="btn btn-primary">Try Again</a>
                            </div>
                        </div>

                        <!-- Success State -->
                        <div id="success-state" class="d-none">
                            <div class="alert alert-success" role="alert">
                                <h4 class="alert-heading">Success!</h4>
                                <p>Credential verification completed successfully.</p>
                            </div>

                            <!-- Credential Data -->
                            <h5 class="mt-4 mb-3">Received Credential Data</h5>
                            <div class="card mb-4">
                                <div class="card-body">
                                    <pre id="credential-data" class="mb-0" style="white-space: pre-wrap; word-break: break-all;"></pre>
                                </div>
                            </div>

                            <div class="d-grid">
                                <a href="/" class="btn btn-primary">New Request</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function processResponseCode() {
            const loadingState = document.getElementById('loading-state');
            const errorState = document.getElementById('error-state');
            const successState = document.getElementById('success-state');
            const errorMessage = document.getElementById('error-message');
            const credentialData = document.getElementById('credential-data');

            // Extract response_code from URL fragment
            const hash = window.location.hash;
            const params = new URLSearchParams(hash.substring(1));
            const responseCode = params.get('response_code');

            if (!responseCode) {
                loadingState.classList.add('d-none');
                errorState.classList.remove('d-none');
                errorMessage.textContent = 'No response_code found in URL. Please try again.';
                return;
            }

            try {
                // Exchange response_code for credential data
                const response = await fetch(`/oid4vp/response-code/exchange?response_code=${encodeURIComponent(responseCode)}`, {
                    method: 'POST',
                    credentials: 'include'
                });

                if (!response.ok) {
                    const errorData = await response.json().catch(() => ({}));
                    throw new Error(errorData.message || `HTTP error: ${response.status}`);
                }

                const data = await response.json();

                // Show success state
                loadingState.classList.add('d-none');
                successState.classList.remove('d-none');
                credentialData.textContent = JSON.stringify(data, null, 2);

            } catch (error) {
                console.error('Error exchanging response_code:', error);
                loadingState.classList.add('d-none');
                errorState.classList.remove('d-none');
                errorMessage.textContent = error.message || 'Failed to process response_code.';
            }
        }

        // Run on page load
        processResponseCode();
    </script>
</body>
</html>
