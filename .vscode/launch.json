{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha: Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
      "args": [
        "--config",
        "${workspaceFolder}/.mocharc.cjs",
        "--timeout",
        "999999",
        "--colors",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha: All Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
      "args": [
        "--config",
        "${workspaceFolder}/.mocharc.cjs",
        "--timeout",
        "999999",
        "--colors",
        "tests/**/*.test.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha: JWT Helper Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
      "args": [
        "--config",
        "${workspaceFolder}/.mocharc.cjs",
        "--timeout",
        "999999",
        "--colors",
        "tests/helpers/jwt-helper.test.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha: End-to-End Encryption Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
      "args": [
        "--config",
        "${workspaceFolder}/.mocharc.cjs",
        "--timeout",
        "999999",
        "--colors",
        "tests/oid4vp/end-to-end-encryption.test.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "test"
      }
    }
  ]
}
